<Window x:Class="ClientForApi.AddUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientForApi"
        mc:Ignorable="d"
        Title="Регистрация" Height="450" Width="800">
    <Grid Margin="0,0,3,0" HorizontalAlignment="Right" Width="797" Height="432" VerticalAlignment="Top">

        <Label Margin="29,32,586,372" FontSize="16">Введите имя</Label>
        <TextBox x:Name="tbName" 
                     Margin="35,73,523,325"
                     ></TextBox>
        <Label Margin="30,125,532,276" FontSize="16">Введите логин</Label>
        <TextBox x:Name="tbLogin"
                     Margin="36,163,524,233"
                     ></TextBox>
        <Label Margin="30,215,535,177" FontSize="16">Введите пароль</Label>
        <TextBox x:Name="tbPassword"
                      Margin="36,252,524,141"
                     ></TextBox>

        <Button x:Name="btnReg"
                     Margin="462,139,84,213" FontSize="20"
                    >Регистрация</Button>


    </Grid>
</Window>
