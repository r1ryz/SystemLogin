<Window x:Class="ClientForApi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientForApi"
        mc:Ignorable="d"
        Title="Вход" Height="450" Width="800">
    <Grid HorizontalAlignment="Center" Width="800" Height="434" VerticalAlignment="Top">

        <Label Margin="21,26,631,366" FontSize="18">Введите логин</Label>
        <TextBox x:Name="tbLogin"
                     Margin="28,65,486,337" TextChanged="tbLogin_TextChanged"
                     ></TextBox>
        <Label Margin="23,112,589,284" FontSize="18">Введите пароль</Label>
        <TextBox x:Name="tbPassword" Margin="29,154,488,247"
                     />
        <Button x:Name="btnReg"
                     Margin="474,142,60,247" FontSize="24"
                    >Регистрация</Button>
        <Button x:Name="btnGo"
                     Width="268"
                    Content="Вход" Margin="473,68,59,319" FontSize="24"
                    />


    </Grid>
</Window>
